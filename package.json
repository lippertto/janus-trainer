{
  "private": true,
  "name": "janus-trainer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "backend": "yarn workspace janus-trainer-backend start:dev",
    "frontend": "yarn workspace janus-trainer-frontend dev",
    "start": "concurrently --kill-others-on-fail \"yarn backend\" \"yarn frontend\"",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "yarn workspaces foreach --all run lint",
    "prepare": "husky"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4"
  },
  "packageManager": "yarn@4.1.0",
  "devDependencies": {
    "husky": "^9.0.7"
  }
}
